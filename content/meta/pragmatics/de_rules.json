{
  "schemaVersion": 1,
  "language": "de",
  "type": "pragmatics_rules",
  "description": "Pragmatic markers required/forbidden for specific intent/register/scenario combinations in German",
  "rules": [
    {
      "id": "request_formal_neutral",
      "match": {
        "intent": "request",
        "register": ["formal", "neutral"]
      },
      "requireAnyTokens": [
        "könnten",
        "könnten Sie",
        "würden",
        "würden Sie",
        "dürfte",
        "dürfte ich",
        "wäre",
        "wäre es möglich",
        "können wir",
        "könnten wir",
        "würden wir",
        "könnten Sie mir",
        "würden Sie mir",
        "dürfte ich bitte",
        "könnte ich bitte",
        "würde ich bitte"
      ],
      "forbidTokens": [],
      "description": "Formal/neutral requests must include polite modal markers"
    },
    {
      "id": "request_informal",
      "match": {
        "intent": "request",
        "register": ["informal", "casual"]
      },
      "requireAnyTokens": [
        "kannst",
        "kannst du",
        "könntest",
        "könntest du",
        "können wir",
        "könnten wir",
        "würdest",
        "würdest du",
        "kann ich",
        "könnte ich",
        "könntest du mir",
        "kannst du mir"
      ],
      "forbidTokens": [],
      "description": "Informal requests should use du-form modal markers"
    },
    {
      "id": "apologize",
      "match": {
        "intent": "apologize"
      },
      "requireAnyTokens": [
        "tut mir leid",
        "entschuldigung",
        "entschuldige",
        "entschuldigen Sie",
        "verzeihung",
        "sorry"
      ],
      "forbidTokens": [],
      "description": "Apologies must include standard apology phrases"
    },
    {
      "id": "work_schedule",
      "match": {
        "scenario": "work",
        "intent": "schedule"
      },
      "requireAnyTokens": [
        "termin",
        "besprechung",
        "meeting",
        "passt",
        "verschieben",
        "können wir",
        "könnten wir",
        "wann",
        "um",
        "am",
        "zeit"
      ],
      "forbidTokens": [],
      "description": "Work scheduling must include scheduling-related vocabulary"
    },
    {
      "id": "restaurant_order",
      "match": {
        "scenario": "restaurant",
        "intent": "order"
      },
      "requireAnyTokens": [
        "hätte",
        "hätte gerne",
        "hätte gern",
        "möchte",
        "nehme",
        "bestelle",
        "ich hätte",
        "ich möchte",
        "wir hätten",
        "wir möchten"
      ],
      "forbidTokens": [],
      "description": "Restaurant orders must use standard ordering phrases"
    },
    {
      "id": "shopping_ask_price",
      "match": {
        "scenario": "shopping",
        "intent": "ask_price"
      },
      "requireAnyTokens": [
        "kostet",
        "preis",
        "wie viel",
        "was kostet",
        "wie teuer",
        "preis von"
      ],
      "forbidTokens": [],
      "description": "Price inquiries must include price-related vocabulary"
    },
    {
      "id": "greet_formal",
      "match": {
        "intent": "greet",
        "register": "formal"
      },
      "requireAnyTokens": [
        "guten tag",
        "guten morgen",
        "guten abend",
        "grüß gott",
        "grüezi",
        "guten tag",
        "sehr geehrte",
        "sehr geehrter"
      ],
      "forbidTokens": [
        "hallo",
        "hi",
        "hey",
        "moin"
      ],
      "description": "Formal greetings must use formal greeting phrases, not casual ones"
    },
    {
      "id": "greet_informal",
      "match": {
        "intent": "greet",
        "register": ["informal", "casual"]
      },
      "requireAnyTokens": [
        "hallo",
        "hi",
        "hey",
        "moin",
        "servus",
        "na",
        "tschüss",
        "ciao"
      ],
      "forbidTokens": [
        "sehr geehrte",
        "sehr geehrter"
      ],
      "description": "Informal greetings should use casual greeting phrases"
    }
  ]
}

