{
  "name": "getverba-content",
  "version": "1.0.0",
  "description": "GetVerba content pipeline - versioned JSON content for the GetVerba platform",
  "type": "module",
  "scripts": {
    "content:validate": "tsx scripts/validate-content.ts && tsx scripts/content-quality-report.ts && tsx scripts/content-expansion-report.ts",
    "content:quality": "tsx scripts/quality-report.ts --fail-on-red",
    "content:quality-report": "tsx scripts/content-quality-report.ts",
    "content:dedupe": "tsx scripts/dedupe-content.ts",
    "content:report": "tsx scripts/review-report.ts",
    "content:review": "tsx scripts/review-content.ts",
    "content:verify": "node scripts/verify-content.mjs",
    "content:generate-indexes": "tsx scripts/generate-indexes.ts",
    "content:generate-catalog-rollups": "tsx scripts/generate-catalog-rollups.ts",
    "content:generate-exports": "tsx scripts/generate-exports.ts",
    "content:export": "tsx scripts/export-curriculum.ts",
    "content:export-bundle": "tsx scripts/export-curriculum-bundle.ts",
    "content:export-analytics": "tsx scripts/export-catalog-analytics.ts",
    "content:export-curriculum": "tsx scripts/export-curriculum-v2.ts",
    "content:validate-curriculum": "tsx scripts/validate-curriculum-export.ts",
    "content:package-curriculum-zip": "tsx scripts/package-curriculum-zip.ts",
    "content:publish": "./scripts/publish-content.sh",
    "content:load-env": "source scripts/load-env.sh",
    "telemetry:dimension": "tsx scripts/generate-content-dimension.ts",
    "telemetry:validate": "tsx scripts/validate-telemetry.ts",
    "telemetry:report": "tsx scripts/telemetry-report.ts",
    "test": "tsx scripts/validate-content.test.ts",
    "test:review": "tsx scripts/review-harness.test.ts",
    "test:curriculum-export": "tsx scripts/export-curriculum-v2.test.ts",
    "test:curriculum-validate": "tsx scripts/validate-curriculum-export.test.ts",
    "test:e2e": "tsx scripts/e2e-test.ts",
    "test:all": "npm test && npm run test:review && npm run test:curriculum-export && npm run test:curriculum-validate && npm run test:e2e"
  },
  "keywords": [
    "getverba",
    "content",
    "pipeline"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}

